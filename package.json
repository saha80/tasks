{
  "name": "tasks",
  "license": "ISC",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "compile:server": "tsc --project ./tsconfig.node.server.json",
    "dev": "yarn compile:server && node unsplashProxyServer | node server",
    "vitest:coverage": "vitest run --coverage",
    "cypress:coverage": "cypress run --e2e && nyc report",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.tsx",
    "build": "yarn build:client && yarn build:server",
    "preview": "yarn compile:server && yarn build && node unsplashProxyServer | cross-env NODE_ENV=production node server",
    "lint": "eslint . --ignore-path ./.gitignore && tsc --noEmit && prettier . --check --ignore-unknown --ignore-path ./.gitignore",
    "prepare": "husky install"
  },
  "engines": {
    "node": "^18.16.0"
  },
  "lint-staged": {
    "**/*": "yarn lint"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-http-proxy": "^1.6.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "react-icons": "^4.8.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.9.0",
    "sirv": "^2.0.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.4",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@testing-library/dom": "^9.2.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/compression": "^1.7.2",
    "@types/cypress__code-coverage": "^3.10.0",
    "@types/express": "^4.17.17",
    "@types/express-http-proxy": "^1.6.3",
    "@types/jest": "^29.5.0",
    "@types/jsdom": "^21.1.0",
    "@types/node": "^18.15.3",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.29.3",
    "cross-env": "^7.0.3",
    "cypress": "^12.10.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.0",
    "msw": "^1.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.8.7",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vite-plugin-istanbul": "^4.0.1",
    "vitest": "^0.29.3",
    "whatwg-fetch": "^3.6.2"
  }
}
